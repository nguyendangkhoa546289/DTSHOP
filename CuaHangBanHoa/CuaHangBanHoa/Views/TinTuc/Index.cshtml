@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}

<div class="container-fluid mt-4">
    <div class="row justify-content-center">
        @foreach (var item in Model)
        {
            <div class="col-sm-6 col-md-4 col-lg-3 mb-4">
                <div class="card h-100 shadow-lg border-0 rounded-3 custom-card">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-success fw-bold">@item.TieuDe</h5>
                        <p class="card-text flex-grow-1">@item.NoiDung</p>
                        <a href="#" class="btn btn-outline-success mt-auto">Xem chi tiết</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
