@model CuaHangBanHoa.SanPham
@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container py-4">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h2 class="card-title">Chi tiết sản phẩm</h2>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <img src="@Html.DisplayFor(model => model.AnhSP)" class="img-thumbnail" alt="@Model.TenSP" />
                </div>
                <div class="col-md-8">
                    <dl class="row">
                        <dt class="col-sm-3">Loại hàng:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.LoaiHang.TenLoai)</dd>

                        <dt class="col-sm-3">Tên sản phẩm:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.TenSP)</dd>

                        <dt class="col-sm-3">Giá bán:</dt>
                        <dd class="col-sm-9">@String.Format("{0:0,0} VNĐ", Model.GiaBan)</dd>

                        <dt class="col-sm-3">Số lượng:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Soluong)</dd>

                        <dt class="col-sm-3">Mô tả:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.MoTa)</dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col-md-4">
                    @Html.ActionLink("Trở về", "Index", null, new { @class = "btn btn-secondary btn-block" })
                </div>
                <div class="col-md-8">
                    <div class="btn-group float-end">
                        @Html.ActionLink("Xóa", "Delete", new { id = Model.MaSP }, new { @class = "btn btn-danger", @style = "color:white;" })
                        @Html.ActionLink("Sửa", "Edit", new { id = Model.MaSP }, new { @class = "btn btn-success", @style = "color:white;" })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
