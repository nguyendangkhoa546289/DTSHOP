@model IEnumerable<CuaHangBanHoa.SanPham>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Sản phẩm</h2>

<p>
    @Html.ActionLink("Tạo sản phẩm", "Create")
</p>
<table class="table table-bordered">
    <tr>
        <th>
            <span>Tên Sản Phẩm</span>
        </th>
        <th>
            <span>Tên Loại</span>
        </th>  
        <th>
            <span>Giá Bán</span>
        </th>
        <th>
            <span>Số Lượng</span>
        </th>
        <th>
            <span>Mô tả</span>
        </th>
        <th>
           <span>Ảnh Sản Phẩm</span>
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenSP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LoaiHang.TenLoai)
            </td>        
            <td>
                @String.Format("{0:0,0}", item.GiaBan) VNĐ
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Soluong)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MoTa)
            </td>
            <td>
                <img src="@Html.DisplayFor(modelItem => item.AnhSP)" width="100px" height="100px" />
            </td>
            <td>
                <button class="btn btn-primary">
                    @Html.ActionLink("Xem", "Details", new { id = item.MaSP }, new { @style = "color:white;" })
                </button>
            </td>
        </tr>
    }
</table>



