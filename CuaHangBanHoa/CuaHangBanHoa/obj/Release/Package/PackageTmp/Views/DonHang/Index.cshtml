@model IEnumerable<CuaHangBanHoa.DonHang>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}

<style>
  


    .badge {
        font-size: 0.85rem; /* Adjust badge font size */
    }

    .badge-warning, .badge-success, .badge-danger, .badge-info {
        color: #fff; /* Light text color for badge texts */
    }

    .badge-warning {
        background-color: #f0ad4e; /* Bootstrap's default warning color */
    }

    .badge-success {
        background-color: #5cb85c; /* Bootstrap's default success color */
    }

    .badge-danger {
        background-color: #d9534f; /* Bootstrap's default danger color */
    }

    .badge-info {
        background-color: #5bc0de; /* Bootstrap's default info color */
    }
</style>
<center>
    <h2>Danh sách đơn hàng</h2>

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Họ tên</th>
                    <th>Ngày đặt</th>
                    <th>Tình trạng đơn hàng</th>
                    <th>Thanh toán</th>
                    <th>Tổng tiền</th>
                    <th>Địa chỉ nhận hàng</th>
                    <th>Chi tiết</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.TaiKhoan.HoTen)</td>
                        <td>@Html.DisplayFor(modelItem => item.NgayDat)</td>
                        <td>
                            @if (item.TinhTrang == 0)
                            {
                                <span class="badge badge-warning">Đang chờ xác nhận</span>
                            }
                            else if (item.TinhTrang == 1)
                            {
                                <span class="badge badge-success">Đã xác nhận</span>
                            }
                            else
                            {
                                <span class="badge badge-warning">Đang chờ xác nhận</span>
                            }

                        </td>
                        <td>
                            @if (item.ThanhToan == 1)
                            {
                                <span class="badge badge-danger">Tiền mặt</span>
                            }
                            else if (item.ThanhToan == 2)
                            {
                                <span class="badge badge-info">Chuyển khoản</span>
                            }
                        </td>
                        <td>@String.Format("{0:0,0} VNĐ", item.TongTien)</td>
                        <td>@Html.DisplayFor(modelItem => item.DiaChiNhanHang)</td>
                        <td>
                            <a href="@Url.Action("Details", "DonHang", new { id = item.Madon })" class="btn btn-info">Chi tiết</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</center>
